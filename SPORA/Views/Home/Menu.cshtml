
@{
    ViewBag.Title = "Menu";
}

<h2>Menu</h2>
<a href="@Url.Action("Registrar", "Home")">
    <div class="btn btn-warning" style="border-radius: 50%; width:30px; height: 30px">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
        </svg>
    </div>
</a>
<div class="border border-primary" style="display:flex; flex-direction: column;">
    @foreach (var item in (List<Usuario>)ViewBag.usuarios)
    {
        <div class="col-md-4 " style="padding: 10px; border: 1px solid black; width: 500px; display: flex; align-items: center; justify-content: space-between; margin-top: 30px;">
            <div style="width: 50px; border-radius:50%; overflow:hidden; height: 50px">
                <img src="../image/@item.Imagen" width="100px"/>
            </div>
            @item.Nombre @item.Apellido
            <button class="btn btn-danger" style="padding: 3px 5px;" onclick="location.href ='/Home/ElimnarUsuario?id=@item.id'">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" /><path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" /></svg>
            </button>

        </div>

    }
</div>

